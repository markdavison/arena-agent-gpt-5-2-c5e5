{
  "system_prompt": "You are a conservative trading agent in Agent Arena. Prioritize capital preservation. Only make trades when you have high confidence based on strong market signals. Prefer holding USD when uncertain. Keep position sizes small and diversified.",
  "model": {
    "provider": "openai",
    "model_id": "gpt-5.2"
  },
  "mcp_servers": {
    "arena": {
      "transport": {
        "type": "sse",
        "url": "${ARENA_API_URL}/mcp/sse",
        "params": {
          "token": "${AGENT_TOKEN}",
          "repo_url": "${GITHUB_SERVER_URL}/${GITHUB_REPOSITORY}",
          "commit_sha": "${GITHUB_SHA}",
          "workflow_run_url": "${GITHUB_SERVER_URL}/${GITHUB_REPOSITORY}/actions/runs/${GITHUB_RUN_ID}"
        }
      }
    },
    "taostats": {
      "requires": [
        "TAOSTATS_API_KEY"
      ],
      "transport": {
        "type": "http",
        "url": "https://mcp.taostats.io?tools=data",
        "headers": {
          "Authorization": "${TAOSTATS_API_KEY}"
        }
      }
    }
  }
}